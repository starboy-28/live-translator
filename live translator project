import tkinter as tk
from googletrans import Translator

# Create a Translator object
translator = Translator()

# Function to perform translation
def translate_text():
    input_text = input_entry.get("1.0", "end-1c")  # Get input text
    destination_language = destination_language_var.get()  # Get destination language

    # Translate the text
    translated_text = translator.translate(input_text, dest=destination_language)

    # Update the output text
    output_text.delete("1.0", "end")
    output_text.insert("1.0", translated_text.text)

# Create the main window
window = tk.Tk()
window.title("Live Language Translation")

# Input text box
input_label = tk.Label(window, text="Enter text to translate:")
input_label.pack()
input_entry = tk.Text(window, height=5, width=40)
input_entry.pack()

# Destination language dropdown
destination_language_var = tk.StringVar()
destination_language_var.set("en")  # Default language is English
destination_language_label = tk.Label(window, text="Select destination language:")
destination_language_label.pack()
destination_language_dropdown = tk.OptionMenu(window, destination_language_var, "en", "fr", "es", "de")
destination_language_dropdown.pack()

# Translate button
translate_button = tk.Button(window, text="Translate", command=translate_text)
translate_button.pack()

# Output text box
output_label = tk.Label(window, text="Translated text:")
output_label.pack()
output_text = tk.Text(window, height=5, width=40)
output_text.pack()

# Start the main loop
window.mainloop()
